<application>

  <name>System</name>


  <module>
      <name>iCub_SIM</name>
      <node>testnode</node>
  </module>

  <module>
        <name>yarprobotinterface</name>
        <node>testnode</node>
        <parameters>--context simCartesianControl --config no_legs.xml</parameters>
        <dependencies>
            <port timeout="40">/icubSim/left_arm/state:o</port>
            <port timeout="40">/icubSim/right_arm/state:o</port>
        </dependencies>
   </module>


  <module>
      <name>iKinCartesianSolver</name>
      <parameters>--context simCartesianControl --part right_arm</parameters>
      <dependencies>
          <port timeout="40">/icubSim/right_arm/state:o</port>
      </dependencies>
      <node>testnode</node>
  </module>
  
  <module>
      <name>iKinGazeCtrl</name>
      <parameters>--from configSim.ini</parameters>
      <dependencies>
          <port timeout="40">/icubSim/head/state:o</port>
          <port timeout="40">/icubSim/inertial</port>
      </dependencies>
      <node>testnode</node>
  </module>

 <module>
      <name>make-it-roll-gianma</name>
      <dependencies>
      	<port timeout="40">/icubSim/cam/left</port>
      	<port timeout="40">/icubSim/cam/right</port>
      	<port timeout="40">/icubSim/cartesianController/right_arm/state:o</port>      
    	<port timeout="40">/iKinGazeCtrl/rpc</port>
<!--
      	<port timeout="40">/icubSim/world</port>
-->
      </dependencies>
      <node>testnode</node>
  </module>

<!--- Connections --->
  <connection>
        <from>/icubSim/cam/left</from>
        <to>/imgL:i</to>
  </connection>
  <connection>
        <from>/icubSim/cam/right</from>
        <to>/imgR:i</to>
  </connection>

 
</application>

